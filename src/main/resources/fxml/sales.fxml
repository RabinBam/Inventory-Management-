<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.4" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.inventory.ui.SalesController">
    <items>
        <VBox spacing="10.0">
            <padding><Insets bottom="10" left="10" right="10" top="10"/></padding>
            <Label text="Product Search">
                <font><Font size="18.0" /></font>
            </Label>
            <TextField fx:id="productSearchField" promptText="Type product name or SKU" />
            <TableView fx:id="productSearchTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="searchNameColumn" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="searchPriceColumn" text="Price" prefWidth="80"/>
                    <TableColumn fx:id="searchStockColumn" text="Stock" prefWidth="60"/>
                </columns>
            </TableView>
            <Button text="Add to Current Sale" maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleAddToCart"/>
        </VBox>
        
        <VBox spacing="10.0">
            <padding><Insets bottom="10" left="10" right="10" top="10"/></padding>
            <Label text="Direct Sale">
                <font><Font size="18.0" /></font>
            </Label>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" styleClass="sale-table">
                <columns>
                    <TableColumn fx:id="cartItemColumn" text="Item" prefWidth="120"/>
                    <TableColumn fx:id="cartQtyColumn" text="Qty" prefWidth="60"/>
                    <TableColumn fx:id="cartPriceColumn" text="Unit Price" prefWidth="100"/>
                    <TableColumn fx:id="cartTotalColumn" text="Subtotal" prefWidth="100"/>
                </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                 <Label fx:id="totalLabel" text="Grand Total: $0.00" style="-fx-font-weight: bold;">
                      <font><Font size="22.0" /></font>
                 </Label>
                 <Button text="Complete Sale" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-weight: bold;" onAction="#handleCheckout"/>
            </HBox>
        </VBox>
    </items>
</SplitPane>

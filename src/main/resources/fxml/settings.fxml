<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.inventory.ui.SettingsController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="System Settings" styleClass="view-title"/>

    <VBox styleClass="card" spacing="15">
        <Label text="Database Configuration" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Local Database Path:" prefWidth="150"/>
            <TextField fx:id="dbPathField" fx:id="dbPathField" HBox.hgrow="ALWAYS" editable="false"/>
            <Button text="Browse" onAction="#handleBrowseDB"/>
        </HBox>

        <Separator/>

        <Label text="Server Synchronization" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Server URL:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="serverUrlField" GridPane.columnIndex="1" GridPane.rowIndex="0" HBox.hgrow="ALWAYS"/>
            
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label text="Not Connected" fx:id="syncStatusLabel" textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
        
        <Button text="Save Settings" style="-fx-background-color: #3498db; -fx-text-fill: white;" onAction="#handleSaveSettings"/>
    </VBox>
</VBox>

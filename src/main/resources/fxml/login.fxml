<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.inventory.ui.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Inventory Management Login">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
   <TextField fx:id="usernameField" maxWidth="300" promptText="Username" />
   <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" />
    <Button onAction="#handleLogin" text="Login" defaultButton="true" maxWidth="300"/>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.inventory.ui.DashboardController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="System Dashboard" styleClass="view-title"/>
    </HBox>

    <Label fx:id="welcomeLabel" text="Welcome back, Admin" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;"/>

    <HBox spacing="20.0">
        <VBox styleClass="card" HBox.hgrow="ALWAYS">
            <Label text="Total Sales (Today)" styleClass="card-label"/>
            <Label fx:id="salesTodayLabel" text="$0.00" styleClass="card-value" style="-fx-text-fill: #27ae60;"/>
        </VBox>
        <VBox styleClass="card" HBox.hgrow="ALWAYS">
            <Label text="Total Items" styleClass="card-label"/>
            <Label fx:id="totalItemsLabel" text="0" styleClass="card-value"/>
        </VBox>
        <VBox styleClass="card" HBox.hgrow="ALWAYS">
            <Label text="Low Stock Items" styleClass="card-label"/>
            <Label fx:id="lowStockLabel" text="0" styleClass="card-value" style="-fx-text-fill: #e67e22;"/>
        </VBox>
    </HBox>

    <Label text="Recent Transactions" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 20 0 10 0;"/>
    
    <TableView fx:id="recentTransactionsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" />
            <TableColumn fx:id="idColumn" text="Sale ID" prefWidth="100" />
            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="120" />
        </columns>
    </TableView>
</VBox>
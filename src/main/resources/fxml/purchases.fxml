<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.inventory.ui.PurchaseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Stock Purchases" styleClass="view-title">
        <font><Font size="24.0" /></font>
    </Label>

    <HBox spacing="15.0" styleClass="card">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Supplier Name"/>
            <TextField fx:id="supplierField" promptText="Enter Supplier Name"/>
        </VBox>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Reference Number"/>
            <TextField fx:id="refNumberField" promptText="Invoice/Ref #"/>
        </VBox>
        <VBox spacing="5.0" alignment="BOTTOM_RIGHT">
            <Button text="Commit All Purchases" style="-fx-background-color: #27ae60; -fx-text-fill: white;" onAction="#handleCommitPurchases"/>
        </VBox>
    </HBox>

    <Separator/>

    <HBox spacing="10.0">
        <TextField fx:id="productSearchField" promptText="Search Product to Add..." HBox.hgrow="ALWAYS"/>
        <Button text="Add Item" onAction="#handleSelectItem"/>
    </HBox>

    <TableView fx:id="purchaseTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="productNameColumn" text="Product" prefWidth="250"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="costPriceColumn" text="Cost Price" prefWidth="120"/>
            <TableColumn fx:id="totalColumn" text="Subtotal" prefWidth="120"/>
            <TableColumn fx:id="actionColumn" text="Action" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Grand Total Cost: " style="-fx-font-size: 18px;"/>
        <Label fx:id="totalCostLabel" text="$0.00" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>
</VBox>
